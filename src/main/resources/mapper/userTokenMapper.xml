<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iovu.iovuback.mapper.UserTokenMapper">
    <insert id="insert" parameterType="com.iovu.iovuback.domain.UserToken">
        INSERT INTO USER_TOKEN (
            TOKEN_ID,
            USER_ID,
            REFRESH_TOKEN,
            EXPIRES_AT
        ) VALUES (
                     RAWTOHEX(SYS_GUID()),
                     #{userId},
                     #{refreshToken},
                     #{expiresAt}
                 )
    </insert>
</mapper>